<h1 class="page-header">Lista de Usuarios</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                <div class="table-responsive">
                    <table width="100%" class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Usuario</th>
                                <th>Nombre</th>
                                <th>Editar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @user.each do |u| %>
                                <tr>
                                    <%@count = @count + 1%>
                                    <td><%=@count%></td>
                                    <td><%= link_to u.email, user_path(@count)%></td>
                                    <td><%= u.first_name%></td>
                                    <td><%= link_to '<span class="fa fa-edit"></span>'.html_safe , edit_user_path(@count) %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>