var checkboxes = "<%= check_box %>"
$(":checkbox").each(function(){
  var tmp = $(this).val();
  if (checkboxes.indexOf(tmp) == -1){
    $(this).attr('checked',false);
  }else{
    var div = $("#chart_div"+tmp)
    div.removeClass("hidden")
  }
});

