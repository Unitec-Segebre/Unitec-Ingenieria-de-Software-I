<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Editar Usuario</h1>
    </div>
</div>

<%= form_for(@user) do |f| %>
  <div class="col-lg-6">
      <div class="form-group">
          <%= f.label :first_name, "Primer Nombre" %>
          <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :middle_name, "Segundo Nombre" %>
          <%= f.text_field :middle_name, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :last_name, "Apellidos" %>
          <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div style= "margin-bottom:10px">
        <%= f.label :image, "Imagen" %>
        <%= f.file_field :image%>
      </div>
      <div class="btn-group" role="group">
        <%= link_to "Cancelar", users_path,class: "btn btn-danger" %>
        <%= f.submit "Guardar Cambios", class: "btn btn-primary" %>
      </div>
  </div>
<% end %>
