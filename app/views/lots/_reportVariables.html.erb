<% @variables.each do |v| %>
  <% @total = @lot.sum_values(v.category, v.id) %>
  <tr>
    <td>
      <%= v.name %>
    </td>
    <td>
      <%= @total.first %> 
    </td>
    <td>
      <%= @total.second %>
    </td>
    <td>
    	<%= @total.third %>
    </td>
    <td>
      <%= @total.fourth %>
    </td>
    <td>
      <%= @total.fifth %>
    </td>
    <td>
      <%= @total[5] %>
    </td>
    <td>
      <%= @total[6] %>
    </td>
  </tr>
<% end %>