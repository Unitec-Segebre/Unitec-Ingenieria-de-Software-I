<div role="document" >
  <div class="modal-header">
      <h3>Nueva Variable</h3>
  </div>
  <div id="error_div"></div>
  <%= form_for(variable, remote: true) do |f| %>
    <div class="modal-body">
        <div class="form-group">
          <%= f.label :name, "Nombre" %>
          <%= f.text_field :name, id: "field", id: "field1", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :category_id, "CategorÃ­a" %>
          <%= f.select :category_id, Category.pluck(:name, :id), {}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :measurement_unit, "Unidad" %>
          <%= f.select :measurement_unit, Variable.measurement_units, {}, class: "form-control" %>
        </div>
    </div>
    <div class="modal-footer">
      <div class="btn-group" role="group">
          <button type="button" class="btn btn-danger" data-dismiss="modal" onClick="clear_field(['#field1', '#field2'])">Cancelar</button>
        <%= f.submit "Guardar",class: "btn btn-primary" %>
      </div>
    </div>
  <%end%>
</div>
