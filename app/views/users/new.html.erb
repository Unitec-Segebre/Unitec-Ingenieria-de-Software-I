<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Crear Usuario</h1>
    </div>
</div>

<%= form_for(@user) do |f| %>
<div class="col-lg-6">
    <div class="form-group">
        <%= f.label :email, "Usuario" %>
        <%= f.text_field :email, class: "form-control", :required => true %>
    </div>
    <div class="form-group">
        <%= f.label :password, "Contraseña" %>
        <%= f.password_field :password, class: "form-control", :required => true%>
    </div>
    <div class="form-group">
        <%= f.label :password_confirmation, "Confirmar Contraseña" %>
        <%= f.password_field :password_confirmation, class: "form-control", :required => true%>
    </div>
    <div class="form-group">
        <%= f.label :first_name, "Primer Nombre" %>
        <%= f.text_field :first_name, class: "form-control", :required => true %>
    </div>
    <div class="form-group">
        <%= f.label :middle_name, "Segundo Nombre" %>
        <%= f.text_field :middle_name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :last_name, "Apellidos" %>
        <%= f.text_field :last_name, class: "form-control", :required => true %>
    </div>
    <div class="btn-group" role="group">
      <%= link_to "Cancelar", new_user_path,class: "btn btn-danger" %>
      <%= f.submit "Registrar", class: "btn btn-primary" %>
    </div>
</div>
<% end %>
