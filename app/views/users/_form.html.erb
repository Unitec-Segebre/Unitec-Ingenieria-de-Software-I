<div role="document" >
    <div class="modal-header">
        <h3>Nuevo Usuario</h3>
    </div>
    <div id="error_div"></div>
    <%= form_for(@user, remote: true) do |f| %>
        <div class="modal-body">
            <div class="form-group">
                <%= f.label :username, "Usuario" %>
                <%= f.text_field :username, class: "form-control", id: "field1" %>
            </div>
            <div class="form-group">
                <%= f.label :password, "Contraseña" %>
                <%= f.password_field :password, class: "form-control", id: "field2"%>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, "Confirmar Contraseña" %>
                <%= f.password_field :password_confirmation, id: "field3",class: "form-control"%>
            </div>
            <div class="form-group">
                <%= f.label :first_name, "Primer Nombre" %>
                <%= f.text_field :first_name, class: "form-control", id: "field4" %>
            </div>
            <div class="form-group">
                <%= f.label :middle_name, "Segundo Nombre" %>
                <%= f.text_field :middle_name, id: "field5",class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :last_name, "Apellidos" %>
                <%= f.text_field :last_name, class: "form-control", id: "field6" %>
            </div>
            <div style= "margin-bottom:10px">
                <%= f.label :image, "Imagen" %>
                <%= f.file_field :image%>
            </div>
            <div class="modal-footer">
                <div class="btn-group" role="group">
                  <button type="button" class="btn btn-danger" data-dismiss="modal" onClick="clear_field(['#field1', '#field2', '#field3', '#field4', '#field5','#field6'])">Cancelar</button>
                  <%= f.submit "Guardar", class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    <% end %>
</div>
