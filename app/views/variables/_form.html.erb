<div role="document" >
  <div class="modal-header">
      <h3>Nueva Variable</h3>
  </div>
  <%= form_for variable do |f| %>
    <div class="modal-body">
        <div class="form-group">   
          <%= f.label :name, "Nombre" %>
          <%= f.text_field :name, id: "field", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :category_id, "CategorÃ­a" %>
          <%= f.select :category_id, Category.pluck(:name, :id), {}, id: "field", class: "form-control" %>
        </div>
        <div class="form-group">    
          <%= f.label :measurement_unit, "Unidad" %>
          <%= f.select :measurement_unit, Variable.measurement_units, {}, id: "field", class: "form-control" %>
        </div>
        <div class="form-group">    
          <%= f.label :unit_cost, "Costo" %>
          <%= f.number_field :unit_cost, id: "field", :step => 0.01, id: "field1", class: "form-control" %>
        </div>
    </div>
    <div class="modal-footer">
      <div class="btn-group" role="group">
          <button type="button" class="btn btn-danger" data-dismiss="modal" onClick="clear_field()">Cancelar</button>
        <%= f.submit "Guardar",class: "btn btn-primary" %>
      </div>
    </div>
  <%end%>
</div>

<script type="text/javascript">
function clear_field(){
  $("#field").val("");
  $("#field1").val("");
}
</script>