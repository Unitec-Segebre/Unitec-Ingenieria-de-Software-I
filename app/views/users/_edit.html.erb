<div role="document" >
  <div class="modal-header">
      <h3>Editar Usuario</h3>
  </div>
  <div id="error_div"></div>
  <%= form_for(@user, remote: true) do |f| %>
    <div class="modal-body">
      <div class="form-group">
          <%= f.label :first_name, "Primer Nombre" %>
          <%= f.text_field :first_name, id: "field1", class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :middle_name, "Segundo Nombre" %>
          <%= f.text_field :middle_name, id: "field2", class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :last_name, "Apellidos" %>
          <%= f.text_field :last_name, id: "field3", class: "form-control" %>
      </div>
      <div style= "margin-bottom:10px">
        <%= f.label :image, "Imagen" %>
        <%= f.file_field :image%>
      </div>
    </div>
    <div class="modal-footer">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
        <%= f.submit "Guardar", class: "btn btn-primary" %>
      </div>
  </div>
</div>
<% end %>
