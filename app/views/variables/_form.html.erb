<div role="document">
  <div class="modal-header">
      <h3>Nueva Variable</h3>
  </div>
  <div class="modal-body">
    <%= form_for @variable do |f| %>
      <div class="form-group">    
        <%= f.label :name, "Nombre" %>
        <%= f.text_field :name, id: "field", class: "form-control" %>
      </div>
      <div class="form-group">    
        <%= f.label :category_id, "CategorÃ­a" %>
        <%= f.select :category_id, Category.pluck(:name, :id), {}, id: "field", class: "form-control" %>
      </div>
      <div class="form-group">    
        <%= f.label :measurement_unit, "Unidad" %>
        <%= f.text_field :measurement_unit, id: "field", class: "form-control" %><!-- cargar de dropdown list -->
      </div>
      <div class="form-group">    
        <%= f.label :unit_cost, "Costo" %>
        <%= f.text_field :unit_cost, id: "field", class: "form-control" %><!-- hacer un formato de lps, talves con un up y down -->
      </div>
  </div>
  <div class="modal-footer">
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-danger" data-dismiss="modal" onClick="clear_field()">Cancelar</button>
      <%= f.submit "Guardar",class: "btn btn-primary" %>
    </div>
  </div>
  <%end%>
</div>

<script type="text/javascript">
function clear_field(){
  $("#field").val("");
}
</script>